# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

# Scenario CRUD functionality
GET         /scenarios                       controllers.Scenario.list
POST        /scenarios                       controllers.Scenario.create
GET         /scenarios/byId/:id              controllers.Scenario.get(id: String)
GET         /scenarios/bySearch/:term        controllers.Scenario.find(term: String)
