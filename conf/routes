# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file           controllers.Assets.at(path="/public", file)

# Scenario CRUD functionality
GET           /scenarios              controllers.ScenarioController.list
POST          /scenarios              controllers.ScenarioController.create
GET           /scenarios/:id          controllers.ScenarioController.get(id: String)
DELETE        /scenarios/:id          controllers.ScenarioController.delete(id: String)

# User CRUD functionality
GET           /users                  controllers.UserController.list
POST          /users                  controllers.UserController.create
GET           /users/:id              controllers.UserController.get(id: String)
DELETE        /users/:id              controllers.UserController.delete(id: String)

GET           /openID/login           controllers.OpenIDController.login()
POST          /openID/login           controllers.OpenIDController.loginPost()
GET           /openID/callback        controllers.OpenIDController.openIDCallback()