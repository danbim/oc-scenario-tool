# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                             controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                 controllers.Assets.at(path="/public", file)

# Scenario CRUD functionality
GET           /scenarios                    controllers.ScenarioController.list
POST          /scenarios                    controllers.ScenarioController.create
GET           /scenarios/:id                controllers.ScenarioController.get(id: String)
DELETE        /scenarios/:id                controllers.ScenarioController.delete(id: String)

# User CRUD functionality
POST          /users/:id/roles              controllers.UserController.setRoles(id: String)
GET           /users                        controllers.UserController.list
POST          /users                        controllers.UserController.create
GET           /users/:id                    controllers.UserController.get(id: String)
DELETE        /users/:id                    controllers.UserController.delete(id: String)

# Authentication
GET           /login                        controllers.LoginController.login
GET           /logout                       com.feth.play.module.pa.controllers.Authenticate.logout
GET           /signup                       controllers.LoginController.signup
POST          /signup                       controllers.LoginController.doSignup
GET           /auth/:provider               com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET           /auth/:provider/denied        controllers.Application.oAuthDenied(provider: String)